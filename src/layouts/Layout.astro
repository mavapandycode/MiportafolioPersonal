---
import "../styles/global.css";
import Logo from "../assets/images/M_NEGATIVO.png";
import Perfil from "../assets/images/imgperfil.png";
import FotoM from "../assets/images/FotoM.png";

import BienvenidosComp from "../components/BienvenidosComp.astro";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mariana Valencia | Portafolio</title>

    <!-- ‚ú® Fuentes -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Sour+Gummy:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="../styles/global.css" />
  </head>

  <body class="bg-[#1e1e2f] text-white font-['Poppins'] relative overflow-hidden">
    <!-- üå∏ Pantalla de bienvenida -->
    <BienvenidosComp />

    <!-- üåÄ Pantalla de carga -->
    <div
      id="loader"
      class="fixed inset-0 bg-[#0f0f1a] flex flex-col items-center justify-center z-40 opacity-0 pointer-events-none transition-opacity duration-700"
    >
      <img src={Logo.src} alt="Cargando" class="w-20 h-20 animate-bounce" />
      <p class="mt-4 text-gray-300 text-lg animate-pulse">Cargando...</p>
    </div>

    <!-- üåü Contenido principal -->
    <div id="main-content" class="opacity-0 transition-opacity duration-700">
      <!-- NAVBAR -->
      <nav class="bg-[#1e1e2f]">
        <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-3">
          <a href="#" class="text-white flex items-center gap-2 text-2xl font-['Sour_Gummy']">
            <img src={Logo.src} alt="Logo" width="50" height="50" />
            MavaPandy.code
          </a>
        </div>
      </nav>

      <!-- CONTENIDO -->
<main class="max-w-7xl mx-auto px-6">
  <section class="flex flex-col md:flex-row items-center justify-center text-center md:text-left min-h-screen md:min-h-0">
    <!-- Texto -->
    <div class="md:w-1/2 mt-5">
      <h2 class="text-5xl mb-3">Mariana Valencia R.</h2>
      <p class="text-base mt-2 mb-2">
        Desarrolladora Web | Ingeniera de Infraestructura y Automatizaci√≥n
      </p>
      <p class="inline-block text-pink-500 bg-pink-200 px-3 py-2 mt-3 text-sm rounded-xl">
        Medell√≠n | Colombia
      </p>
    </div>

    <!-- Imagen -->
    <div class="w-full md:w-1/2 flex justify-center p-3 mt-6 md:mt-0">
      <img
        src={FotoM.src}
        alt="Imagen personal"
        class="w-56 md:w-64 object-contain"
      />
    </div>
  </section>
</main>

    </div>

    <!-- ‚öôÔ∏è Script -->
    <script>
window.addEventListener("DOMContentLoaded", () => {
  const welcome = document.getElementById("welcome-screen");
  const loader = document.getElementById("loader");
  const content = document.getElementById("main-content");
  const continueBtn = document.getElementById("continue-btn");

  if (!continueBtn || !welcome || !loader || !content) return;

  continueBtn.addEventListener("click", () => {
    // Oculta la pantalla de bienvenida
    welcome.style.opacity = "0";
    welcome.style.pointerEvents = "none";

    setTimeout(() => {
      welcome.style.display = "none";

      // Muestra el loader
      loader.style.opacity = "1";
      loader.style.pointerEvents = "auto";

      // ‚è≥ Simula un tiempo de carga (1.5s aprox)
      setTimeout(() => {
        loader.style.opacity = "0";

        setTimeout(() => {
          loader.style.display = "none";
          content.style.opacity = "1"; // Muestra el contenido principal
        }, 600);
      }, 1500);
    }, 500);
  });
});
</script>

  </body>
</html>

